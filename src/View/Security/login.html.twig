
{% extends 'layout.html.twig' %}
{% block title %} LOG IN {% endblock %}

{% block content %}
<div class="container">
    <div class="col-1 back">
        <a href="/" class="text-reset"><span class="material-icons">keyboard_backspace</span></a>
    </div>
	<div class="login">
		<h1 class="">LOG IN</h1>
        <div class="formlogin">
            <form method="POST">
        <div class="mt-3 form-group form-style">
            <label for="email">EMAIL</label>
            <input type="email" class="form-control" id="email" name="email">
        </div>
        <div class="mt-3 form-group form-style">
            <label for="password">PASSWORD</label>
            <input type="password" class="form-control" id="password" name="password">
        </div>
        {% if errors is not empty %}
        <div class="mt-3 alert alert-secondary alert-dismissible fade show">
            {% for error in errors %}
            <p>{{ error }}</p>
            {% endfor %}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        {% endif %}
        <div class="mt-3">
            <button type="submit" class="btn btn-secondary" name="register">VALIDATE</button>
        </div>
        <div class="mt-3">
            <a href="/security/register">Don't have an account yet ? Register here</a>
        </div>
        </form>
        </div>
	</div>
</div>
{% endblock %}

