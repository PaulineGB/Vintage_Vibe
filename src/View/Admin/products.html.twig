{% extends 'layout.html.twig' %}

{% block title %} All products{% endblock %}

{% block content %}
<section id="products">
    <h1>Products</h1>
    <a href="/admin/products/add">Ajouter</a>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">picture</th>
            <th scope="col">title</th>
            <th scope="col">category</th>
            <th scope="col">size</th>
            <th scope="col">price</th>
            <th scope="col">quantity</th>
            <th scope="col">action</th>
          </tr>
        </thead>
        <tbody>
            {% for product in products %}
          <tr>
            <th scope="row">{{ product.id }}</th>
            <td>{{ product.picture }}</td>
            <td>{{ product.title }}</td>
            <td>{{ product.category_id }} - {{ product.category_name }} </td>
            <td>{{ product.size_id }} - {{ product.size_name }} </td>
            <td>{{ product.price }}</td>
            <td>{{ product.quantity }}</td>
            <td>
                <a href="/admin/edit/{{ product.id }}" class="btn btn-outline-secondary">EDIT</a>
                <a href="/admin/delete/{{ product.id }}" class="btn btn-outline-secondary">DELETE</a>
            </td>
          </tr>
            {% endfor %}
        </tbody>
      </table>
</section>

{% endblock %}