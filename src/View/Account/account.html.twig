{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} My Account
{% endblock %}

{% block navbar %}{% include 'Layout/_navbarfront.html.twig' %}{% endblock %}

{% block content %}
  <section id="products" class="p-5 container">
    <div class="container text-center">
        <h1 class="m-3">MY ACCOUNT</h1>
        <a class="btn btn-secondary mt-3 mb-5" href="/security/logout">LOG OUT</a>
    </div>
    <div>
        <div class="mt-3 border-bottom border-secondary"><h5>FIRSTNAME</h5></div>
            <p>{{ user.firstname }}</p>
        <div class="mt-3 border-bottom border-secondary"><h5>LASTNAME</h5></div>
            <p>{{ user.lastname }}</p>
        <div class="mt-3 border-bottom border-secondary"><h5>ADDRESS</h5></div>
            <p>{{ user.address }}</p>
        <div class="mt-3 border-bottom border-secondary"><h5>EMAIL</h5></div>
            <p>{{ user.email }}</p>
        <div class="container text-center">
            <a class="btn btn-outline-secondary mt-3 mb-5" href="/Home/editAccount/{{ user.id }}">EDIT</a>
        </div>
    <div class="mb-3 text-center">
        <h1>MY ORDERS</h1>
    </div>
    <div class="d-flex p-3">
        <div class="row justify-content-center align-self-center border border-secondary w-100 p-3">
            <h5 class="mt-3">DATE {{ order.created_at }}</h5>
            <div class="m-3">
                <h6 class="card-subtitle mb-2 text-muted">{{ order.user_firstname }} {{ order.user_lastname }}</h6>
                <h6 class="card-subtitle mb-2 text-muted">{{ order.user_address }}</h6>
                <h6 class="card-subtitle mb-2 text-muted">{{ order.user_email }}</h6>
            </div>
            <div class="d-flex border-bottom border-secondary mb-3">
                <h6 class="d-flex justify-content-around align-items-center mr-4"><img src="{{ order.p_picture }}" width="80px" height="80px" alt="Album picture"></h6>
                <h6 class="row d-flex justify-content-around align-items-center m-4">{{ order.p_title }}</h6>
                <h6 class="row d-flex justify-content-around align-items-center m-4">{{ order.p_price }} €</h6>
                <h6 class="row d-flex justify-content-around align-items-center m-4">QUANTITY {{ order.op_quantity }}</h6>
            </div>
            <h5 class="mb-5">TOTAL {{ order.total }} €</h5>
        </div>
    </div>
</div>
</section>

{% endblock %}

{% block footer %}{% endblock %}