{% extends 'layout.html.twig' %}

{% block title %}
{{ parent() }} My Account
{% endblock %}

{% block navbar %}{% include 'Layout/_navbarfront.html.twig' %}{% endblock %}

{% block content %}
<section id="products" class="p-5 container">
    <div class="container text-center">
        <h1 class="m-3">MY ACCOUNT</h1>
        <h1 class="m-1">{{session.user.lastname}} {{session.user.firstname}}</h1>
        <a class="btn btn-secondary mt-5 mb-5" href="/security/logout">LOG OUT</a>
    </div>
    <div>
        <div class="mt-3 border-bottom border-secondary">
            <h5>FIRSTNAME</h5>
        </div>
        <p>{{ user.firstname }}</p>
        <div class="mt-3 border-bottom border-secondary">
            <h5>LASTNAME</h5>
        </div>
        <p>{{ user.lastname }}</p>
        <div class="mt-3 border-bottom border-secondary">
            <h5>ADDRESS</h5>
        </div>
        <p>{{ user.address }}</p>
        <div class="mt-3 border-bottom border-secondary">
            <h5>EMAIL</h5>
        </div>
        <p>{{ user.email }}</p>
        <div class="container text-center">
            <a class="btn btn-outline-secondary mt-3 mb-5" href="/Home/editAccount/{{ user.id }}">EDIT</a>
        </div>
    </div>
    <div class="mb-3 text-center">
        <h1>MY WISHLIST</h1>
    </div>
    <div class="p-3">
        <div class="border border-secondary w-100 p-3">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">PRODUITS</th>
                        <th scope="col"> </th>
                        <th scope="col"> </th>
                        <th scope="col"> </th>
                        <th scope="col">DELETE</th>
                    </tr>
                </thead>
                <tbody>
                    {% for wish in wishlist %}
                    <tr>
                        <td><img src="{{ wish.product.picture }}" width="100px" height="100px" alt="Album picture"></td>
                        <td>{{wish.product.title}}</td>
                        <td>{{wish.product.price}}</td>
                        <td>{{wish.product.quantity}}</td>
                        <td><a href="/wishlist/dislike/{{wish.wish_id}}" class="text-reset"><span class="material-icons">delete_forever</span></a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="mb-3 text-center">
        <h1>MY ORDERS</h1>
    </div>
    <div class="d-flex p-3">
        <div class="row justify-content-center align-self-center border border-secondary w-100 p-3">
            {% for invoice in invoices %}
            <h5 class="mt-3">DATE {{ invoice.created_at }}</h5>
            <div class="m-3">
                <h6 class="card-subtitle mb-2 text-muted">{{ invoice.u_firstname }} {{ invoice.u_lastname }}</h6>
                <h6 class="card-subtitle mb-2 text-muted">{{ invoice.u_address }}</h6>
                <h6 class="card-subtitle mb-2 text-muted">{{ invoice.u_email }}</h6>
            </div>
            <h5 class="mb-1">TOTAL {{ invoice.total }} â‚¬</h5>
            <a href="/home/showInvoice/{{ invoice.id }}" class="btn btn-outline-secondary">INVOICE</a>
            {% endfor %}
        </div>
    </div>
</section>
{% endblock %}

{% block footer %}{% include 'Layout/_footer.html.twig' %}{% endblock %}