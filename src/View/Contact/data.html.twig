{% extends 'layout.html.twig' %}

{% block title %} Messages {% endblock %}

{% block navbar %}{% include 'Admin/_adminnavbar.html.twig' %}{% endblock %}

{% block content %}
    <div class="col-1 back m-3">
        <a href="/admin/index/" class="text-reset"><span class="material-icons">keyboard_backspace</span></a>
    </div>
        <div class="container text-center">
            <h1 class="mb-3">MESSAGES FROM CONTACTS</h1>
        </div>
        <div class="container">
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">firstname</th>
                        <th scope="col">lastname</th>
                        <th scope="col">email</th>
                        <th scope="col">message</th>
                        <th scope="col">action</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for contact in contacts %}
                        <tr>
                            <th scope="row">{{ contact.id }}</th>
                            <td>{{ contact.firstname }}</td>
                            <td>{{ contact.lastname }}</td>
                            <td>{{ contact.message }}</td>
                            <td>{{ contact.email }}</td>
                            <td><a href=mailto:{{ contact.email }} class="btn btn-outline-secondary">ANSWER</a></td>
                            <td><a href="/admin/deleteContact/{{ contact.id }}" class="btn btn-outline-dark">DELETE</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}

{% block footer %}{% include 'Admin/_adminfooter.html.twig' %}{% endblock %}
