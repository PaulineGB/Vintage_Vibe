				{% for error in errors %}
					<p>{{ error }}</p>
				{% endfor %}
			{% else %}
				<p>{{ sentence }}</p>
			{% endif %}
		
	</div>
	<input type="hidden" value="{{ contact.id }}" name="id">
	<label for="firstname">Firstname:</label><br>
