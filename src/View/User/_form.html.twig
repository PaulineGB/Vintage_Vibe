<div class="userform">
    <form method="POST">
        <div class="m-3"></div>
        {% if user is defined and user.is_admin == true %}
        <input class="form-check-input" type="checkbox" id="is_admin" value="true" name="is_admin" checked>
        <label for="is_admin" class="form-check-label">Is admin</label>
        {% else %}
        <input class="form-check-input" type="checkbox" id="is_admin" value="true" name="is_admin">
        <label for="is_admin" class="form-check-label">Is admin</label>
        {% endif %}
</div>
<div class="mt-3 form-group form-style">
    <label for="email">EMAIL</label>
    <input type="email" class="form-control" id="email" name="email" value="{{ user.email }}" required>
</div>
<br>
<div class="form-group form-style">
    <label for="firstname">FIRSTNAME</label>
    <input type="text" class="form-control" id="firstname" name="firstname" value="{{ user.firstname }}" required>
</div>
<br>
<div class="form-group form-style">
    <label for="lastname">LASTNAME</label>
    <input type="text" class="form-control" id="lastname" name="lastname" value="{{ user.lastname }}" required>
</div>
<br>
<div class="form-group form-style">
    <label for="address">ADDRESS</label>
    <input type="text" class="form-control" id="address" name="address" value="{{ user.address }}" required>
</div>
<br>
<div class="form-group form-style">
    <label for="password">PASSWORD</label>
    <input type="password" class="form-control" id="password" name="password" value="{{ user.password }}" required>
</div>
{% if errors is not empty %}
<div class="mt-3 alert alert-warning alert-dismissible fade show">
    {% for error in errors %}
    <p>{{ error }}</p>
    {% endfor %}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{% endif %}
<br>
<div class="mb-3">
    <button type="submit" class="btn btn-secondary" name="register">VALIDATE</button>
</div>
</form>