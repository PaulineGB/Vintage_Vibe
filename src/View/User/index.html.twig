{% extends 'layout.html.twig' %}

{% block title %} Users {% endblock %}

{% block navbar %}{% include 'Admin/_adminnavbar.html.twig' %}{% endblock %}

{% block content %}
        <div class="col-1 back">
            <a href="/admin/index/" class="text-reset"><span class="material-icons">keyboard_backspace</span></a>
        </div>
        <div class="text-center">
            <h1>USERS</h1>
            <div><a href="/User/add/" class="btn btn-secondary">ADD NEW USER</a></div>
        </div>
        <br>
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">firstname</th>
                        <th scope="col">lastname</th>
                        <th scope="col">address</th>
                        <th scope="col">email</th>
                        <th scope="col">admin</th>
                        <th scope="col">action</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <th scope="row">{{ user.id }}</th>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.address }}</td>
                            <td>{{ user.email }}</td>
                            <td>
                            {% if user.is_admin == "1" %}
                            <p>&#x2714;</p>
                                {% endif %}
                            </td>
                            <td><a href="/User/edit/{{ user.id }}" class="btn btn-outline-secondary">EDIT</a></td>
                            <td><a href="/User/delete/{{ user.id }}" class="btn btn-outline-dark">DELETE</a></tr>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
{% endblock %}

{% block footer %}{% include 'Admin/_adminfooter.html.twig' %}{% endblock %}