{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Users</h1>
    <a href="/User/add/">Add a new user</a>
    <ul>
        {% for user in users %}
            <li><a href="/User/show/{{ user.id }}">{{ user.id }}. {{ user.firstname }}. {{ user.lastname }}. {{ user.address }}. {{ user.email }}</a></li>
        {% else %}
            <li>No one has registered on the site. Nothing to display</li>
        {% endfor %}
    </ul>
{% endblock %}
