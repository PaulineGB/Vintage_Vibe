{% extends 'layout.html.twig' %}

{% block title %} All size {% endblock %}

{% block navbar %}{% include 'Admin/_adminnavbar.html.twig' %}{% endblock %}

{% block content %}
    <div class="col-1 back m-3">
        <a href="/admin/index/" class="text-reset"><span class="material-icons">keyboard_backspace</span></a>
    </div>
    <div class="container text-center">
        <h1 class="mb-3">SIZES</h1>
        <a href="/admin/addSize/" class="btn btn-secondary">ADD SIZE</a>
    </div>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">name</th>
                    <th scope="col">action</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for size in sizes %}
                    <tr>
                        <th scope="row">{{ size.id }}</th>
                        <td>{{ size.name }}</td>
                        <td><a href="/admin/editSize/{{ size.id }}" class="btn btn-outline-secondary">EDIT</a></td>
                        <td><a href="/admin/deleteSize/{{ size.id }}" class="btn btn-outline-dark">DELETE</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block footer %}{% include 'Admin/_adminfooter.html.twig' %}{% endblock %}
