{% extends 'layout.html.twig' %}

{% block title %} - My Account {% endblock %}

{% block navbar %}{% endblock %}

{% block content %}
        <div class="col-1 back">
            <a href="/admin/index/" class="text-reset"><span class="material-icons">keyboard_backspace</span></a>
        </div>
        <div class="text-center">
            <h1>MY ACCOUNT</h1>
            <a class="mt-5 btn btn-secondary" href="/security/logout">LOGOUT</a>
        </div>
        <div>
            <div>
                <h5>FIRSTNAME</h5>
                <p>{{ user.firstname }}</p>
            </div>
            <div>
                <h5>LASTNAME</h5>
                <p>{{ user.lastname }}</p>
            </div>
            <div>
                <h5>ADDRESS</h5>
                <p>{{ user.address }}</p>
            </div>
            <div>
                <h5>EMAIL</h5>
                <p>{{ user.email }}</p>
            </div>
            <div>
                <h5>PASSWORD</h5>
            </div>
            <a href="/User/edit/{{ user.id }}" class="btn btn-outline-secondary">EDIT</a>
        </div>
{% endblock %}

{% block footer %}{% endblock %}