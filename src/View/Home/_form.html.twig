<section id="contactNewsletter">
	{% if errors is not empty %}
		{% for error in errors %}
			<p>{{error}}</p>
		{% endfor %}
	{% else %}
		<p>{{ sentence}}</p>
	{% endif %}


	<form method="post" classe="container">
		<div class="mb-3">
			<div class="row-2">
				<label for="email">NEWSLETTER</label>
				<div>
					<input class="col-1 justify-content-center" type="email" value="{{ newsletter.email }}" name="email">
					<button class="btn btn-small"><span class="col-1 justify-content-center material-icons">send</span></button>
				</div>
			</div>
		</div>
	</form>
</section>
