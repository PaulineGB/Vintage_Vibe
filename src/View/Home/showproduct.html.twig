{% extends 'layout.html.twig' %}

{% block title %} {{ product.title }} {% endblock %}

{% block navbar %}{% include 'Layout/_navbarfront.html.twig' %}{% endblock %}

{% block content %}
<div class="container text-center mt-5">
    <h1> {{product.title}} </h1>
    <h2> {{product.artist}} </h2>
    <div class="productpicture">
        <div class="row mt-3">
            <div>
                <img src="{{ product.picture }} " width="30%" height="30%" class="img-fluid">
            </div>
            <div class="mt-3">
                <p class="fs-5">ABOUT ▼▼ {{ product.description }}</p>
            </div>
            <div>
                <p class="fs-5">CATEGORY ▼▼ {{ product.category_name}}</p>
            </div>
            <div>
                <p class="fs-5">SIZE ▼▼ {{ product.size_name }}</p>
            </div>
            <div>
                <p class="fs-5">PRICE ▼▼ {{ product.price }}$</p>
            </div>
        </div>
        <div class="mt-3"><a href="/Cart/addToCart/{{ product.id }}" class="text-reset"><button type="submit" class="btn btn-secondary mb-5" name="submit">ADD TO CART<br><span class="material-icons">shopping_cart</span></button></a></div>
    </div>
</div>
{% endblock %}